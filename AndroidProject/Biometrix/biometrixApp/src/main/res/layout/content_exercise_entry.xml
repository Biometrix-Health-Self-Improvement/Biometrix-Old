<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ex_GridLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center">

        <EditText
            android:layout_width="226dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/ex_title"
            android:ems="10"
            android:id="@+id/ex_title"
            android:layout_row="1"
            android:layout_column="0"
            android:hint="Enter Exercise Name"
            android:textAlignment="center" />

        <Space
            android:layout_width="242dp"
            android:layout_height="60dp"
            android:layout_row="0"
            android:layout_column="0" />

        <Button
            android:layout_width="226dp"
            android:layout_height="79dp"
            android:text="@string/ex_when"
            android:id="@+id/button"
            android:layout_row="2"
            android:layout_column="0"
            android:textSize="22dp"
            android:background="@color/button_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ex_time"
            android:id="@+id/ex_time"
            android:layout_row="3"
            android:layout_column="0"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp" />

        <Spinner
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/ex_min_spinner"
            android:layout_row="3"
            android:layout_column="1"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_marginTop="20dp"
            android:gravity="left"
            android:prompt="@string/ex_prompt" />

    </GridLayout>

    <RadioGroup
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_alignParentBottom="false"
        android:layout_alignParentEnd="false"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="260dp"
        android:id="@+id/radioGroup">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Light"
            android:id="@+id/ex_rb_a" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cardio"
            android:id="@+id/ex_rb_b" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Strength"
            android:id="@+id/ex_rb_c" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Heavy"
            android:id="@+id/ex_rb_d" />
    </RadioGroup>

    <Button
        android:layout_width="140dp"
        android:layout_height="78dp"
        android:text="@string/ex_reps"
        android:id="@+id/ex_b_reps"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="false"
        android:layout_marginTop="280dp"
        android:textSize="16dp"
        android:background="@color/button_color" />

    <Button
        android:layout_width="200dp"
        android:layout_height="78dp"
        android:text="@string/ex_weight"
        android:id="@+id/ex_b_weight"
        android:layout_alignBottom="@+id/ex_b_reps"
        android:background="@color/button_color"
        android:textSize="16dp"
        android:layout_marginLeft="15dp"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:layout_marginRight="5dp" />
</RelativeLayout>