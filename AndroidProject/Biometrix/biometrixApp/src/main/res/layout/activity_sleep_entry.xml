<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.rocket.biometrix.SleepEntry"
    android:paddingEnd="6dp">

    <Button
        style="@color/button_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DONE"
        android:id="@+id/submitSleepButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="86dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/sleepStartDateRow">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sleepStartTextView"
                android:layout_column="0"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:text="@string/sleep_start_text"
                android:onClick="getSleepDateClick"
                android:layout_span="2"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Space
                android:layout_width="20px"
                android:layout_height="20px"
                android:layout_column="0" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hours slept: "
                android:id="@+id/sleepHoursSleptTextView"
                android:layout_column="0"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

            <SeekBar
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sleepHoursSeekBar"
                android:layout_column="1"
                android:indeterminate="false"
                android:layout_weight="1"
                android:max="23"
                android:progress="1" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minutes slept: "
                android:id="@+id/sleepMinutesSleptTextView"
                android:layout_column="0"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

            <SeekBar
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sleepMinutesSeekBar"
                android:layout_column="1"
                android:layout_weight="1"
                android:indeterminate="false"
                android:max="59"
                android:progress="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sleepEndTimeTextView"
                android:layout_column="0"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:layout_span="3"
                android:text="@string/sleep_end_base" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>

    </TableLayout>

</RelativeLayout>
