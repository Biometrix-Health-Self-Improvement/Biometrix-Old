<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.rocket.biometrix.DietEntry"
    tools:showIn="@layout/activity_diet_create_entry">

    <Button
        android:id="@+id/DietCreateEntryDoneButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@color/colorButtonBackground"
        android:text="DONE"/>

    <TextView
        android:id="@+id/DietStartDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Date: "
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/FoodType_View"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/DietStartDateTextView"
        android:text="Food Type"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/Meal_View"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/FoodType_View"
        android:text="Meal"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/ServingSize_View"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Meal_View"
        android:text="Serving Size"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/Calories_View"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ServingSize_View"
        android:text="Calories"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/TotalFat_View"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Calories_View"
        android:text="Total Fat"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/SaturatedFat_View"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TotalFat_View"
        android:layout_toEndOf="@+id/Meal_View"
        android:text="Saturated Fat"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/TransFat_View"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SaturatedFat_View"
        android:layout_toEndOf="@+id/Meal_View"
        android:text="Trans Fat"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/Cholesterol_View"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/TransFat_View"
        android:text="Cholesterol"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/Sodium_View"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Cholesterol_View"
        android:text="Sodium"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/TotalCarbs_View"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Sodium_View"
        android:text="Total Carbohydrates"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/DietaryFiber_View"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TotalCarbs_View"
        android:layout_toEndOf="@+id/Meal_View"
        android:text="Dietary Fiber"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/Sugars_View"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/DietaryFiber_View"
        android:layout_toEndOf="@+id/Meal_View"
        android:text="Sugars"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/Protein_View"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Sugars_View"
        android:text="Protein"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/VitaminA_View"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Protein_View"
        android:text="Vitamin A"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/VitaminB_View"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/VitaminA_View"
        android:text="Vitamin B"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/Calcium_View"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/VitaminB_View"
        android:text="Calcium"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/Iron_View"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Calcium_View"
        android:text="Iron"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

    <EditText
        android:id="@+id/Iron_Amt"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/Iron_View"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:inputType="numberSigned"
        android:longClickable="false"
        android:maxLength="4" />

    <EditText
        android:id="@+id/Calcium_Amt"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/Calcium_View"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:inputType="numberSigned"
        android:longClickable="false"
        android:maxLength="4" />

    <EditText
        android:id="@+id/VitaminB_Amt"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/VitaminB_View"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:inputType="numberSigned"
        android:longClickable="false"
        android:maxLength="4" />

    <EditText
        android:id="@+id/VitaminA_Amt"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_above="@+id/VitaminB_View"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:inputType="numberSigned"
        android:longClickable="false"
        android:maxLength="4" />

    <EditText
        android:id="@+id/Protein_Amt"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_above="@+id/VitaminA_View"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:inputType="numberSigned"
        android:longClickable="false"
        android:maxLength="4" />

    <EditText
        android:id="@+id/Sugars_Amt"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/Sugars_View"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:inputType="numberSigned"
        android:longClickable="false"
        android:maxLength="4" />

    <EditText
        android:id="@+id/DietaryFiber_Amt"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/DietaryFiber_View"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:inputType="numberSigned"
        android:longClickable="false"
        android:maxLength="4" />

    <EditText
        android:id="@+id/TotalCarb_Amt"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_above="@+id/DietaryFiber_View"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:inputType="numberSigned"
        android:longClickable="false"
        android:maxLength="4" />

    <EditText
        android:id="@+id/Sodium_Amt"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_above="@+id/TotalCarbs_View"
        android:layout_alignEnd="@+id/TotalCarb_Amt"
        android:ems="10"
        android:inputType="numberSigned"
        android:longClickable="false"
        android:maxLength="4" />

    <EditText
        android:id="@+id/Cholesterol_Amt"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/Cholesterol_View"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:inputType="numberSigned"
        android:longClickable="false"
        android:maxLength="4" />

    <EditText
        android:id="@+id/TransFat_Amt"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/TransFat_View"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:inputType="numberSigned"
        android:longClickable="false"
        android:maxLength="4" />

    <EditText
        android:id="@+id/SaturatedFat_Amt"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/SaturatedFat_View"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:inputType="numberSigned"
        android:longClickable="false"
        android:maxLength="4" />

    <EditText
        android:id="@+id/TotalFat_Amt"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_above="@+id/SaturatedFat_View"
        android:layout_alignEnd="@+id/SaturatedFat_Amt"
        android:ems="10"
        android:inputType="numberSigned"
        android:longClickable="false"
        android:maxLength="4" />

    <EditText
        android:id="@+id/Calories_Amt"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_above="@+id/TotalFat_View"
        android:layout_alignEnd="@+id/TotalFat_Amt"
        android:ems="10"
        android:inputType="numberSigned"
        android:longClickable="false"
        android:maxLength="4" />

    <EditText
        android:id="@+id/Food_Name"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/FoodType_View"
        android:layout_alignParentEnd="true"
        android:maxLength="22"
        android:maxLines="1"
        android:singleLine="true" />

    <Spinner
        android:id="@+id/Meal_Select"
        android:layout_width="210dp"
        android:layout_height="30dp"
        android:layout_above="@+id/ServingSize_View"
        android:layout_alignParentEnd="true"
        android:entries="@array/Meal_Type"
        android:spinnerMode="dropdown" />

    <Spinner
        android:id="@+id/ServingSize_Select"
        android:layout_width="210dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/Meal_Select"
        android:entries="@array/Serving_Size"
        android:spinnerMode="dropdown" />


    <!--    <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="toggle"
            android:id="@+id/diet_entry_toggle_switch"
            android:layout_above="@+id/DietCommentsTextView"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="63dp"
            android:checked="false"
            android:onClick="toggleSwitchExample"/>-->


</RelativeLayout>
